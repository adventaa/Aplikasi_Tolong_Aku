<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Rumah_sakit">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wallpaper"
        />


    <TextView
        android:id="@+id/RUMAHSAKIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:text="RUMAH SAKIT"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/buttonDokter"
        android:layout_width="112dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="164dp"
        android:layout_marginTop="217dp"
        android:layout_marginRight="135dp"
        android:layout_marginBottom="366dp"
        android:background="@null"
        android:paddingLeft="6sp"
        android:paddingTop="4sp"
        android:paddingRight="6sp"
        android:paddingBottom="4sp"
        android:scaleType="centerCrop"
        android:src="@drawable/dokter" />

    <TextView
        android:id="@+id/Dokter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="358dp"
        android:layout_marginBottom="333dp"
        android:text="Layanan Dokter"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Ambulance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="566dp"
        android:layout_marginBottom="125dp"
        android:text="Bantuan Ambulance"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/buttonAmbulance"
        android:layout_width="191dp"
        android:layout_height="153dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="115dp"
        android:layout_marginTop="410dp"
        android:layout_marginEnd="104dp"
        android:layout_marginRight="104dp"
        android:layout_marginBottom="167dp"
        android:background="@null"
        android:paddingLeft="6sp"
        android:paddingTop="4sp"
        android:paddingRight="6sp"
        android:paddingBottom="4sp"
        android:scaleType="centerCrop"
        android:src="@drawable/ambulan" />

    <Button
        android:id="@+id/buttonback"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="36dp"
        android:text="Home"
        android:textSize="35dp" />

</RelativeLayout>